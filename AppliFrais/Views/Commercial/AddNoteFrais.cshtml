@model AppliFrais.EntityFramework.Models.NoteFrais

<h2>Ajouter une note de Frais</h2>


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Ici, vous pouvez ajouter une note de frais qui se retrouvera dans votre fiche de frais.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
