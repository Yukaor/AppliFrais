<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppliFrais</title>
    <link href="@Url.Content("~/Content/paper.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <div class="body-content">
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("AppliFrais", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Commerciaux", "Index", "Comptable", null, null)</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (Request.IsAuthenticated)
                            {
                                @Html.ActionLink("Se déconnecter", "Logout", "Authentication", null, null)
                            }
                            else
                            {
                                @Html.ActionLink("Se connecter", "Login", "Authentication", null, null)
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - AppliFrais</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
